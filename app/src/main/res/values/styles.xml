<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">@color/colorBackground</item>
    </style>

    <style name="resultStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_above">@+id/tableLayout</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">50sp</item>
    </style>

    <style name="tableLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">#757575</item>
        <item name="android:stretchColumns">0,1,2,3</item>
    </style>

    <style name="tableRowStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#757575</item>
    </style>

    <style name="buttonStyle" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_one</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:onClick">keyClicked</item>
    </style>

    <style name="buttonStyle.two">
        <item name="android:background">@drawable/button_two</item>
    </style>

    <style name="buttonStyle.three">
        <item name="android:background">@drawable/button_three</item>
    </style>

</resources>
